{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    // ****************************************
    // Override tslint recommended rules
    // ****************************************
    "interface-name": [
      true,
      "never-prefix"
    ],
    "only-arrow-functions": [
      false
    ],
    // ****************************************
    // Disable ts stylistic rules
    // ****************************************
    "arrow-parens": false,
    "curly": false,
    "member-ordering": [
      false
    ],
    "object-literal-key-quotes": [
      false
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": [
      false
    ],
    "quotemark": [
      false
    ],
    "semicolon": [
      false
    ],
    "trailing-comma": [
      false
    ],
    // ****************************************
    // Disable tsx stylistic rules
    // ****************************************
    "jsx-alignment": false,
    "jsx-no-multiline-js": false,
    "jsx-wrap-multiline": false
  }
}
